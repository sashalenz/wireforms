{
    "name": "sashalenz/wireforms",
    "description": "This is my package wireforms",
    "keywords": [
        "sashalenz",
        "laravel",
        "wireforms"
    ],
    "homepage": "https://github.com/sashalenz/wireforms",
    "license": "MIT",
    "authors": [
        {
            "name": "Oleksandr Petrovskyi",
            "email": "sashalenz@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "illuminate/contracts": "^9.10",
        "illuminate/view": "^9.10",
        "livewire/livewire": "^2.10",
        "spatie/laravel-package-tools": "^1.9.2",
        "wire-elements/modal": "^1.0"
    },
    "require-dev": {
        "roave/security-advisories": "dev-latest",
        "nunomaduro/collision": "^6.0",
        "orchestra/testbench": "^7.0",
        "pestphp/pest": "^1.21",
        "pestphp/pest-plugin-laravel": "^1.1",
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "Sashalenz\\Wireforms\\": "src",
            "Sashalenz\\Wireforms\\Database\\Factories\\": "database/factories"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Sashalenz\\Wireforms\\Tests\\": "tests"
        }
    },
    "scripts": {
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Sashalenz\\Wireforms\\WireformsServiceProvider"
            ],
            "aliases": {
                "Wireforms": "Sashalenz\\Wireforms\\Facades\\Wireforms"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
