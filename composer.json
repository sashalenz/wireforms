{
    "name": "sashalenz/wireforms",
    "description": "This is my package wireforms",
    "keywords": [
        "sashalenz",
        "laravel",
        "wireforms"
    ],
    "homepage": "https://github.com/sashalenz/wireforms",
    "license": "MIT",
    "authors": [
        {
            "name": "Oleksandr Petrovskyi",
            "email": "sashalenz@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "blade-ui-kit/blade-heroicons": "^1.3",
        "illuminate/contracts": "^9.10",
        "illuminate/view": "^9.10",
        "livewire/livewire": "^2.10",
        "sashalenz/searchable": "@dev || 0.1",
        "spatie/laravel-package-tools": "^1.11",
        "spatie/once": "^3.1",
        "wire-elements/modal": "^1.0"
    },
    "require-dev": {
        "roave/security-advisories": "dev-latest",
        "nunomaduro/collision": "^6.2",
        "orchestra/testbench": "^7.4",
        "pestphp/pest": "^1.21",
        "pestphp/pest-plugin-laravel": "^1.2",
        "phpunit/phpunit": "^9.5"
    },
    "repositories": [
        {
            "type": "path",
            "url": "../*",
            "options": {
                "symlink": true
            }
        }
    ],
    "autoload": {
        "psr-4": {
            "Sashalenz\\Wireforms\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Sashalenz\\Wireforms\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Sashalenz\\Wireforms\\WireformsServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
